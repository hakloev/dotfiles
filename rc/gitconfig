[user]
  user = hakloev
  name = Håkon Ødegård Løvdal
  email = hakon@loevdal.no
[color]
  diff = always
  status = always
  branch = always
  ui = true
[core]
  autocrlf = false
  pager = less -FXRS -x2 # Two-spaces as tabs
  excludesfile = ~/.gitexcludes
  ignorecase = false
  editor = vim
  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  # [default] trailing-space: looks for spaces at the end of a line
  # [default] space-before-tab: looks for spaces before tabs at the beginning of a line
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space,blank-at-eof
[push]
  default = current
  followTags = true
[fetch]
  prune = true
[hub]
  protocol = ssh
[rerere]
  enabled = true
[clean]
  requireForce = false
[merge]
  tool = opendiff
[apply]
  whitespace = fix
[alias]
  # View the current working tree status using the short format
  s = status -s
  c = commit
  d = diff
  wd = diff \n--color-words
  co = checkout
  w = whatchanged --oneline
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
  # Clone a repository including all submodules
  cl = clone --recursive
  # View abbreviated SHA, description, and history graph of the latest 20 commits
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
