[includeIf "gitdir:~/git/external/rm/"]
  path = .gitconfig-rm

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true

[color]
  diff = always
  status = always
  branch = always
  ui = true

[core]
  autocrlf = false
  pager = less -FXRS -x2 # Two-spaces as tabs
  excludesfile = ~/.gitexcludes
  ignorecase = false
  editor = vim
  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  # [default] trailing-space: looks for spaces at the end of a line
  # [default] space-before-tab: looks for spaces before tabs at the beginning of a line
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space,blank-at-eof

[push]
  default = current
  followTags = true

[fetch]
  prune = true

[hub]
  protocol = ssh

[rerere]
  enabled = true

[clean]
  requireForce = false

[merge]
  tool = opendiff

[apply]
  whitespace = fix

[alias]
  wd = diff \n--color-words
  w = whatchanged --oneline
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
  # View abbreviated SHA, description, and history graph of the latest 20 commits
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  clean = "git branch --color=never --merged | egrep -v \"(^\\*|master|main|dev)\" | xargs git branch -d"

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =

[init]
	defaultBranch = main
